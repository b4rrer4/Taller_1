ejercicio=int(input("Digite el ejercicio del 1 al 14 que desee ver: "))

if ejercicio == 1:
#El area de un triangulo 
  print ("Area de un triangulo")
  base=int(input("ingrese la base del triangulo: "))
  altura=int(input("ingrese la altura del triangulo: "))
  area= (base*altura)/2
  print("el area del triangulo es:", area)


if ejercicio == 2:
#La suma de dos cifras
  print("Se realiza la suma de dos digitos")
  num1=int(input("digite su primera cifra: "))
  num2=int(input("digite su segunda cifra: "))
  suma=num1+num2
  print("el resultdo de la suma es:", suma)

if ejercicio == 3:
#Elevar al cuadrado
  print("Se eleva un numero al cuadrado")
  num=int(input("digite el numero que quiera elevar: "))
  cuadrado=num**2
  print("el resultado de la potencia es:", cuadrado)

if ejercicio == 4:
#la suma entre 1234 y 532
  print("Suma entre 1234 y 532")
  suma2=1234+532
  print("Y el resultado de esta es:", suma2)

if ejercicio == 5:
#la resta entre 1234 y 532
  print("Resta entre 1234 y 532")
  resta=1234-532
  print("el resultado de la resta es:", resta)

if ejercicio == 6:
#Multiplicacion de 1234 y 532
  print("Multiplicacion entre 1234 y 532")
  mult=1234*532
  print("el resultado de la multiplicacion es:", mult)

if ejercicio == 7:
#Division de 1234 y 532
   print("division entre 1234 y 532")
   division=1234/532
   print("el resultado de la division es:", division)

if ejercicio == 8:
#Modulo entre 1234 y 532
  print("Modulo entre 1234 y 532")
  modulo=1234%532
  print("el resultado es:", modulo)

if ejercicio == 9:
#Convercion de moneda 
   print("Convercion de Euros a dolares o diceversa")
   moneda=int(input("escriba 1 para convertir euros a dolares y 2 para convertir dolares a euros: "))
   if moneda == 1:
     euro=int(input("ingrese la catidad de euros a convertir: "))
     convercion=euro*1.09
     print(euro ,"euros son: $",convercion ,"dolares")
   if moneda == 2:
     dolar=int(input("ingrese la cantidad de dolares a covertir: "))
     convercion2=dolar*0.91
     print(dolar ,"dolares son: â‚¬",convercion2 ,"euros")

if ejercicio == 10:
  #Area de rectangulo
  print("Hallar elarea de rectangulo")
  base2 = int(input("escriba la base del rectangulo: "))
  altura2 = int(input("escriba la altura del rectangulo: "))
  rectangulo = base2*altura2
  print("el area del rectangulo es:", rectangulo)

if ejercicio == 11: 
  #Area y Perimetro de un cuadrado
  print("Hallar el area y el perimetro de un cuadrado")
  lado = int(input("escriba la longitud de alguno de sus lados: "))
  area2 = lado**2
  perimetro = lado*4
  print("el area del cuadrado es:", area2)
  print("el perimetro del cuadrado es:", perimetro)

if ejercicio == 12:
  #Area y Volumen de cilindro
  print("Hallar area y perimetro de un cilindro")
  radio = int(input("escriba el radio del cilindro: "))
  altura3 = int(input("escriba la altura del cilindro: "))
  area3 = (2*3.14)*radio*altura3+(2*3.14)*(radio**2)
  volumen = 3.14*(radio**2)*altura3
  print("el area del cilindro es:", area3)
  print("el volumen delcilindro es:", volumen)

if ejercicio == 13:
  #Area y longitud de una circunferencia
  print("Hallar la longitud y el area de una circunferencia")
  radio2 = int(input("escriba el radio de la circunferencia: "))
  longitud = (2*3.14)*radio2
  area4 = 3.14*(radio2**2)
  print("la longitud de la circunferencia es:", longitud)
  print("el area de la cricunferencia es:", area4)
  
if ejercicio == 14:
  #Promedio de 3 numeros
  print("Hallar el promedio de 3 numeros")
  Num = int(input("escriba el primer numero: "))
  Num2 = int(input("escriba el segundo numero: "))
  Num3 = int(input("escriba el tercer numero: "))
  promedio = (Num+Num2+Num3)/3
  print("el promedio de los 3 numeros es:", promedio)

else:
  print("Ese ejercicio no se encuentra")
